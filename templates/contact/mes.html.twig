{% extends 'base.html.twig' %}

{% block title %} Formulaire de Contact {% endblock %}

{% block body %}

<h1> Formulaire de Contact</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{form_row(form.nom)}}
        </div>
        <div class="form-group">
            {{form_row(form.prenom)}}
        </div>
        <div class="form-group">
            {{form_row(form.email)}}
        </div>
        <div class="form-group">
            {{form_row(form.message)}}
        </div>
    <button class="btn btn-primary">
        Envoyer
    </button>
    {{ form_end(form) }}
{% endblock %}
